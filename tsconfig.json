{
  "compilerOptions": {
    "outDir": "./lib/",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "./src/sample/**/*",
    "./src/__tests__/**/*"
  ]
}
