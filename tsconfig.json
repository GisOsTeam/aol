{
  "compilerOptions": {
    "outDir": "./lib/",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": true,
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "DOM",
      "ES6"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "./src/sample/**/*",
    "./src/__tests__/**/*"
  ]
}
